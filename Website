        <h2>ðŸ›  Try It Yourself</h2>
        <textarea id="inputText" placeholder="Type text to encrypt/decrypt..."></textarea>
        <button onclick="simpleEncrypt()">Encrypt (Caesar Cipher)</button>
        <button onclick="simpleDecrypt()">Decrypt (Caesar Cipher)</button>
        <div class="output" id="outputText"></div>
    </div>

    <script>
        function simpleEncrypt() {
            const input = document.getElementById('inputText').value;
            let result = '';
            for (let i = 0; i < input.length; i++) {
                const charCode = input.charCodeAt(i);
                result += String.fromCharCode(charCode + 3);
            }
            document.getElementById('outputText').innerText = result;
        }

        function simpleDecrypt() {
            const input = document.getElementById('inputText').value;
            let result = '';
            for (let i = 0; i < input.length; i++) {
                const charCode = input.charCodeAt(i);
                result += String.fromCharCode(charCode - 3);
            }
            document.getElementById('outputText').innerText = result;
        }
    </script>
